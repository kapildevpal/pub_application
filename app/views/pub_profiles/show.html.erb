<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2><%= @pub_profile.name %></h2>

      <p>
        <strong>Name:</strong>
        <%= @pub_profile.name %>
      </p>

      <p>
        <strong>Description:</strong>
        <%= @pub_profile.description %>
      </p>

      <p>
        <strong>Location:</strong>
        <%= @pub_profile.location %>
      </p>

      <p>
        <strong>Capacity:</strong>
        <%= @pub_profile.capacity %>
      </p>

      <p>
        <strong>Smoking Allowed:</strong>
        <%= @pub_profile.is_smoking_allowed ? 'Yes' : 'No' %>
      </p>

      <p>
        <strong>Average Rating:</strong>
        <%= @pub_profile.average_rating %>
      </p>

      <p>
        <strong>Current Number Of People:</strong>
        <%= @pub_profile.current_number_of_people %>
      </p>

      <h2>Menus</h2>
      <% @pub_profile.menus.each do |menu| %>
        <p>
          <strong>Name:</strong>
          <%= menu.name %>
        </p>

        <p>
          <strong>Price:</strong>
          <%= menu.price %>
        </p>

        <p>
          <strong>Item Type:</strong>
          <%= menu.item_type %>
        </p>
      <% end %>

      <% if current_pub_owner %>
        <h2>Add a Menu:</h2>
        <%= form_with(model: [ @pub_profile, @pub_profile.menus.build ], local: true, html: { class: 'form-add-menu' }) do |form| %>
          <div class="form-group">
            <%= form.label :name %><br>
            <%= form.text_field :name, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :price %><br>
            <%= form.text_area :price, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :item_type %><br>
            <%= form.text_area :item_type, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.submit "Add Menu", class: 'btn btn-primary btn-block' %>
          </div>
        <% end %>

        <h2>Add an Offer:</h2>
        <%= form_with(model: [ @pub_profile, @pub_profile.offers.build ], local: true, html: { class: 'form-add-offer' }) do |form| %>
          <div class="form-group">
            <%= form.label :name %><br>
            <%= form.text_field :name, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :description %><br>
            <%= form.text_area :description, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :start_date %><br>
            <%= form.text_area :start_date, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :end_date %><br>
            <%= form.text_area :end_date, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.submit "Add Offer", class: 'btn btn-primary btn-block' %>
          </div>
        <% end %>
      <% end %>

      <%= button_to "Book Pub", bookings_path(pub_profile_id: @pub_profile.id), method: :post, class: "btn btn-success mt-3 book-button" %>
      <%= link_to 'Back', pub_profiles_path, class: 'btn btn-secondary mt-3' %>
    </div>
  </div>
</div>
